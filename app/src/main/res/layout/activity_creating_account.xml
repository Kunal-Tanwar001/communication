<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity.CreatingAccount"
    android:background="@drawable/backd">

    <TextView
        android:id="@+id/tittle"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:text="Let's Meet"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginLeft="13dp"/>

    <TextView
        android:id="@+id/Signup"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="105dp"
        android:gravity="center"
        android:text="Signup"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/usernamenewregister"
        android:layout_width="322dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="166dp"
        android:background="@drawable/boxxml"
        android:gravity="center"
        android:text="Enter your UserName"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="338dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="238dp"
        android:background="@drawable/boxxml"
        android:gravity="center"
        android:text="Email Address/Phone Number"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22dp" />


    <EditText
        android:id="@+id/passwordR"
        android:layout_width="323dp"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="204dp"
        android:background="@drawable/boxxml"
        android:gravity="center"
        android:text="Password"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22dp" />

    <Button
        android:id="@+id/register"
        android:layout_width="175dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="122dp"

        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="Register Now"
        android:textSize="23dp"
        android:textStyle="normal" />

</RelativeLayout>